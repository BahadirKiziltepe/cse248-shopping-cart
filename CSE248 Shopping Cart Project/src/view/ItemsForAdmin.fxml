<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.CheckBox?>
<?import javafx.scene.control.ListView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<VBox prefHeight="480.0" prefWidth="720.0" xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="controllers.ItemsControllerForAdmin">
   <children>
      <AnchorPane prefHeight="480.0" prefWidth="720.0">
         <children>
            <TextField fx:id="searchBar" layoutX="15.0" layoutY="15.0" prefHeight="30.0" prefWidth="200.0" promptText="Search Item..." />
            <Button fx:id="searchBtn" layoutX="250.0" layoutY="15.0" mnemonicParsing="false" onAction="#search" text="Search">
               <font>
                  <Font size="15.0" />
               </font>
            </Button>
            <Button fx:id="addBtn" layoutX="217.0" layoutY="340.0" mnemonicParsing="false" onAction="#addItem" text="Add Item">
               <font>
                  <Font size="15.0" />
               </font>
            </Button>
            <CheckBox fx:id="checkIfTaxable" layoutX="119.0" layoutY="348.0" mnemonicParsing="false" text="Taxable" />
            <TextField fx:id="itemID" alignment="CENTER" layoutX="99.0" layoutY="95.0" prefHeight="30.0" prefWidth="200.0" promptText="Item ID">
               <font>
                  <Font size="15.0" />
               </font>
            </TextField>
            <TextField fx:id="itemName" alignment="CENTER" layoutX="99.0" layoutY="145.0" prefHeight="30.0" prefWidth="200.0" promptText="Item Name">
               <font>
                  <Font size="15.0" />
               </font>
            </TextField>
            <TextField fx:id="itemCategory" alignment="CENTER" layoutX="99.0" layoutY="195.0" prefHeight="30.0" prefWidth="200.0" promptText="Item Category">
               <font>
                  <Font size="15.0" />
               </font>
            </TextField>
            <TextField fx:id="itemPrice" alignment="CENTER" layoutX="99.0" layoutY="245.0" prefHeight="30.0" prefWidth="200.0" promptText="Item Price">
               <font>
                  <Font size="15.0" />
               </font>
            </TextField>
            <TextField fx:id="itemCount" layoutX="99.0" layoutY="292.0" prefWidth="200.0" promptText="Item Count">
               <font>
                  <Font size="15.0" />
               </font>
            </TextField>
            <Button fx:id="mainMenu" layoutX="15.0" layoutY="435.0" mnemonicParsing="false" onAction="#goToMainMenu" text="Main Menu">
               <font>
                  <Font size="15.0" />
               </font>
            </Button>
            <ListView fx:id="itemList" layoutX="393.0" layoutY="32.0" prefHeight="400.0" prefWidth="300.0" />
         </children>
      </AnchorPane>
   </children>
</VBox>

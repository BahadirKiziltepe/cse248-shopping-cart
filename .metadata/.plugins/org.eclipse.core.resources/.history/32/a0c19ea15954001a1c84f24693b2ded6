package application;

import model.StoreDataBase;

import java.io.IOException;

import View.LoginScene;
import View.RegisterScene;
import javafx.application.Application;
import javafx.stage.Stage;
import javafx.scene.Scene;
import javafx.scene.layout.BorderPane;
import javafx.scene.layout.VBox;
import javafx.fxml.FXMLLoader;

public class Main2 extends Application {

	private Stage mainStage;
	private BorderPane root = new BorderPane();

	private StoreDataBase data;

	@Override
	public void start(Stage stg) {
		mainStage = stg;

		init();
	}

	public static void main(String[] args) {
		launch(args);
	}

	public void init() {
		try {
			FXMLLoader loader = new FXMLLoader();
			loader.setLocation(Main2.class.getClass().getClassLoader().getResource("View/Root.fxml"));
			root = (BorderPane) loader.load();
			showLoginPage();
			Scene scene = new Scene(root);
			scene.getStylesheets().add(getClass().getClassLoader().getResource("/View/application.css").toExternalForm());
			mainStage.setScene(scene);
			mainStage.show();
		} catch (Exception e) {
			e.printStackTrace();
		}
	}

	public void showLoginPage() {
		try {
			FXMLLoader loader = new FXMLLoader();
			loader.setLocation(Main2.class.getClass().getClassLoader().getResource("/View/Login.fxml"));
			VBox loginBox = (VBox) loader.load();
			root.setCenter(loginBox);
			LoginScene login = loader.getController();
			login.setMain(this);

		} catch (IOException e) {
			e.printStackTrace();
		}
	}
}
